import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.ticker as mticker

# Definisci il percorso del file per questo grafico specifico
file_path_costophishing = '/content/gdrive/MyDrive/costophishing.xlsx'

# Carica i dati dal file Excel
data = pd.read_excel(file_path_costophishing)

# Stampa i nomi delle colonne per debugging (ora con il file corretto)
print('Nomi delle colonne nel file Excel:', data.columns)

# Creazione del grafico combinato con le modifiche richieste
fig, ax1 = plt.subplots(figsize=(10, 6))

# Grafico a linee per il pagamento più alto
color = 'tab:blue'
ax1.set_xlabel('Anno')
ax1.set_ylabel('Pagamento più alto (in unità monetarie)', color=color, rotation=0, ha='right', va='center', labelpad=20)
ax1.plot(data['Anno'], data['Pagamento più alto'], color=color, marker='o', markersize=8, label='Pagamento più alto', zorder=10, linewidth=2, markeredgecolor='white', markeredgewidth=1.5) # Aumentato zorder e aggiunto bordo bianco ai marker
ax1.tick_params(axis='y', labelcolor=color)

# Imposta i tick sull'asse x per mostrare gli anni come interi
ax1.set_xticks(data['Anno'])

# Funzione per formattare i tick dell'asse Y in milioni (es. 1M, 2M)
def millions_formatter(x, pos):
    return f'{x*1e-6:.0f}M'

# Applica il formatter all'asse Y di 'Pagamento più alto'
ax1.yaxis.set_major_formatter(mticker.FuncFormatter(millions_formatter))
ax1.set_yticks(range(0, int(data['Pagamento più alto'].max()) + 1000000, 1000000))

# Grafico a barre per il numero di riscatti registrati
ax2 = ax1.twinx()
color = '#FFB6C1' # Cambiato da 'darkorange' a 'rosino' (light pink)
ax2.set_ylabel('Numero riscatti registrati', color=color, rotation=0, ha='left', va='center', labelpad=20)
ax2.bar(data['Anno'], data['Numero riscatti registrati'], color=color, label='Numero riscatti registrati', zorder=1, alpha=0.6)
ax2.tick_params(axis='y', labelcolor=color)

# Allinea gli zeri delle ordinate
ax1.set_ylim(bottom=0)
ax2.set_ylim(bottom=0)

# Titolo e legende
plt.title('Pagamento più alto e numero di riscatti per anno')
fig.legend(loc='upper left', bbox_to_anchor=(1.05, 1.0))

# Rimuovi i bordi superiore e destro
fig.subplots_adjust(right=0.85, top=0.85)

# Mostra il grafico
plt.tight_layout()
plt.show()